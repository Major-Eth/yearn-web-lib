{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDirs": ["."],
		"paths": {
			"@yearn-finance/web-lib/components/*": ["@yearn-finance/web-lib/packages/web-lib/components/*"],
			"@yearn-finance/web-lib/contexts/*": ["@yearn-finance/web-lib/packages/web-lib/contexts/*"],
			"@yearn-finance/web-lib/hooks/*": ["@yearn-finance/web-lib/packages/web-lib/hooks/*"],
			"@yearn-finance/web-lib/icons/*": ["@yearn-finance/web-lib/packages/web-lib/icons/*"],
			"@yearn-finance/web-lib/utils": ["@yearn-finance/web-lib/packages/web-lib/utils"],
			"@yearn-finance/web-lib/types/*": ["@yearn-finance/web-lib/packages/web-lib/types/*"],
		},
		"jsx": "react",
		"target": "esnext",
		"module": "esnext",
		"lib": [
			"es6",
			"es7",
			"esnext",
			"dom"
		],
		"allowJs": true,
		"declaration": true,
		"removeComments": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
	},
	"exclude": ["node_modules"],
	"include": [
		"components/**/*",
		"contexts/**/*",
		"hooks/**/*",
		"icons/**/*",
		"utils/**/*",
		"types/**/*",
	]
}
