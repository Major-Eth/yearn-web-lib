{
	"compilerOptions": {
		"rootDirs": ["./src"],
		"baseUrl": ".",
		"paths": {
			"@web-lib": ["src"],
			"*": ["src/*", "node_modules/*"]
		},
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["es6", "es7", "ESNext", "dom", "dom.iterable"],
		"allowJs": true,
		"jsx": "preserve",
		"removeComments": false,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"inlineSources": false,
		"downlevelIteration": true,
		"sourceMap": true,
		"inlineSourceMap": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"incremental": true,
		"isolatedModules": true,
		"declaration": true,
		"importHelpers": true,
		"outDir": "build",
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src", "tailwind.config.js", "tailwind.config.cjs"]
}